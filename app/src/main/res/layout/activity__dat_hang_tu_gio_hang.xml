<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KhachHang.ChucNang_DatHangTuGioHang.Activity_DatHangTuGioHang">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/DatHangGioHang_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#FF5722"></TextView>
    <EditText
        android:id="@+id/DatHangGioHang_edtHoTen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="15dp"
        android:hint="Họ tên của bạn"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"
        android:layout_marginRight="25dp"
        android:paddingLeft="15dp"
        ></EditText>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày đặt"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#FF5722"></TextView>
    <TextView
        android:id="@+id/DatHangGioHang_tvNgayDat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:paddingTop="20dp"
        android:text="21/05/2021"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"
        android:layout_marginRight="25dp"
        android:paddingLeft="15dp"
        ></TextView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày nhận"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="#FF5722"></TextView>
    <TextView
        android:id="@+id/DatHangGioHang_tvNgayNhan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:paddingTop="20dp"
        android:text="Chọn ngày"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext"
        android:layout_marginRight="25dp"
        android:paddingLeft="15dp"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#FF5722"></TextView>
        <TextView
            android:id="@+id/DatHangGioHang_tvTongTien"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₫ 125.000.000"
            android:textSize="20sp"
            android:layout_marginLeft="200dp"
            android:textStyle="bold"
            android:textColor="#673AB7"></TextView>
    </LinearLayout>

    <ListView
        android:layout_marginTop="15dp"
        android:id="@+id/DatHangGioHang_lv"
        android:layout_width="match_parent"
        android:layout_height="300dp"></ListView>

    <Button

        android:id="@+id/DatHangGioHang_btnXacNhan"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/botron_btn"
        android:text="Xác nhận"
        android:layout_marginTop="20dp"
        android:textColor="#fff"></Button>
</LinearLayout>