<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/rowGioHang_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/laptop"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rowGioHang_tvTenLaptop"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="Asus TUF Gaming FX505DT"
                android:textSize="17sp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                ></TextView>
            <TextView
                android:id="@+id/rowGioHang_tvGiaBan"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="â‚« 21.300.000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#FF0000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                ></TextView>

            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/rowGioHang_btnGiam"
                    android:background="@drawable/botron_soluong"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:text="-"></Button>
                <TextView
                    android:id="@+id/rowGioHang_tvSL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:text="1"></TextView>
                <Button
                    android:id="@+id/rowGioHang_btnTang"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/botron_soluong"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:text="+"></Button>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    
</androidx.cardview.widget.CardView>