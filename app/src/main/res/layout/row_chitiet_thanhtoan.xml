<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/rowCTTT_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/laptop"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rowCTTT_tvTenLaptop"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="Asus TUF Gaming FX505DT"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                ></TextView>
            <TextView
                android:id="@+id/rowCTTT_tvGiaBan"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="₫ 21.300.000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#FF0000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                ></TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng :"
                    android:textColor="#000"
                    android:textSize="17sp"></TextView>
                <TextView
                    android:id="@+id/rowCTTT_tvSL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:text="1"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền :"
                    android:textColor="#000"
                    android:textSize="17sp"></TextView>
                <TextView
                    android:id="@+id/rowCTTT_tvThanhTien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF0000"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:text="21.300.000 VNĐ"></TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>